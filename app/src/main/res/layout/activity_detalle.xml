<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3mm"
    tools:context=".DetalleActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder Notes"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="6mm"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtInfoTitulo"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6mm"
            android:text="Titulo"
            android:textSize="3mm"></TextView>
        <TextView
            android:id="@+id/txtInfoDescricpion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textSize="3mm"></TextView>
        <TextView
            android:id="@+id/txtInfoFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de inicio"
            android:textSize="3mm"
            ></TextView>
        <TextView
            android:id="@+id/txtInfoFechaTermino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Termino"
            android:textSize="3mm"
            ></TextView>
        <TextView
            android:id="@+id/txtInfoHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora de inicio"
            android:textSize="3mm"
            ></TextView>
    </LinearLayout>
    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/btnEliminar">
    </Button>
</LinearLayout>