<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@color/material_on_background_disabled"
    android:scrollbarThumbVertical="@color/material_on_background_disabled"
    tools:context=".AddRecord">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@null"
            app:srcCompat="@drawable/flecha"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="48dp" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:text="Reminder Notes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="59dp" />

        <ImageButton
            android:id="@+id/btnUsuario"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/img_3" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="3mm"
        android:text="@string/txtTipo"
        android:textColor="#B3FFFFFF"
        android:textSize="30dp" />


    <RadioGroup
        android:id="@+id/grupoRadio"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btnRecordatorio"
            android:background="@drawable/radio_selector_recordatorio"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:text="@string/btnRecordatorio" />

        <RadioButton
            android:id="@+id/btnProgramado"
            android:background="@drawable/radio_selector_programado"
            android:layout_width="120dp"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:text="@string/btnProgramado" />

        <RadioButton
            android:id="@+id/btnSimple"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/radio_selector_simple"
            android:button="@android:color/transparent"
            android:text="@string/btnSimple" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtTituloRecordatorio"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:baselineAligned="false"
        android:ems="10"
        android:hint="@string/hintTituloRecord"
        android:textColor="#B3FFFFFF"
        android:textColorHint="#B3FFFFFF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtDescripcionRecordatorio"
        android:layout_width="352dp"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:hint="Descripcion..." />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/txtFecha_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Fecha de Inicio"
            android:visibility="gone"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtHora"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="116dp"
            android:text="Hora"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFechaInicio"
            android:layout_width="128dp"
            android:layout_height="37dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:visibility="gone"
            tools:text="DD/MM/YY" />

        <Button
            android:id="@+id/btnHora"
            android:layout_width="128dp"
            android:layout_height="37dp"
            android:visibility="gone"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:text="HH:MM" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtFechaTermino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="10dp"
        android:text="Fecha de termino"
        android:visibility="gone"
        android:textSize="14dp" />


    <Button
        android:id="@+id/btnFechaFinal"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:visibility="gone"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        tools:text="DD/MM/YY" />

    <Button
        android:id="@+id/btnListo"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_mostrar"
        android:text="@string/btnListo"
        android:textAlignment="center"
        android:textColor="@color/black" />
</LinearLayout>





